<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Toolbox.View.MunitConverter"
             Title="Unit Converter"
             BackgroundColor="#3498db">

  <ContentPage.Resources>
    <ResourceDictionary>
      <x:String x:Key="Convert">Convert!</x:String>
      <x:String x:Key="EnterNumber">Enter Number</x:String>
    </ResourceDictionary>
  </ContentPage.Resources>

  <ContentPage.Padding>
    <OnPlatform x:TypeArguments="Thickness"
                iOS="0, 20, 0, 0" />
  </ContentPage.Padding>

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <Entry x:Name="startEntry" Grid.Row="1" StyleId="StartEntry"
             BackgroundColor="#3498db" Keyboard="Numeric"
             Placeholder="{StaticResource EnterNumber}" />

    <Picker x:Name="startPicker" Grid.Row="3" StyleId="StartPicker"
            HorizontalOptions="FillAndExpand">
      <Picker.Items>
        <x:String>Kilometer</x:String>
        <x:String>Meter</x:String>
        <x:String>Centimeter</x:String>
        <x:String>Millimeter</x:String>
        <x:String>Mile</x:String>
        <x:String>Yard</x:String>
        <x:String>Foot</x:String>
        <x:String>Inch</x:String>
      </Picker.Items>
    </Picker>

    <Picker x:Name="endPicker" Grid.Row="5"  StyleId="EndPicker"
            HorizontalOptions="FillAndExpand">
      <Picker.Items>
        <x:String>Kilometer</x:String>
        <x:String>Meter</x:String>
        <x:String>Centimeter</x:String>
        <x:String>Millimeter</x:String>
        <x:String>Mile</x:String>
        <x:String>Yard</x:String>
        <x:String>Foot</x:String>
        <x:String>Inch</x:String>
      </Picker.Items>
    </Picker>
    <Label x:Name="endLabel" Grid.Row="7" StyleId="EndLabel" XAlign="Center"/>
    <Button Grid.Row="9" Text="{StaticResource Convert}" ></Button>
  </Grid>
</ContentPage>